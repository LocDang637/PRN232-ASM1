@model SmokeQuit.MVCWebApp.FE.LocDPX.Models.LoginRequest

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - SmokeQuit.MVCWebApp.FE.LocDPX</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-comments text-primary"></i> SmokeQuit.MVCWebApp.FE.LocDPX - <span class="text-danger">Chat System</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Home
                            </a>
                        </li>
                        <!-- Add Coach link without authentication -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="CoachesLocDpx" asp-action="PublicIndex">
                                <i class="fas fa-users"></i> View Coaches
                            </a>
                        </li>
                    </ul>
                    <div class="nav-item text-nowrap">
                        <span class="text-muted me-2">
                            <i class="fas fa-info-circle"></i> Please login to access full features
                        </span>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            <div class="row text-center">
                <h1 class="display-4">Login to Chat System</h1>
                <p class="lead">Manage conversations between users and coaches</p>
            </div>

            <!-- Quick info about coaches -->
            <div class="row mb-4">
                <div class="col-md-12">
                    <div class="alert alert-info text-center">
                        <i class="fas fa-users"></i>
                        <strong>Browse our qualified coaches</strong> before logging in!
                        <a asp-controller="CoachesLocDpx" asp-action="PublicIndex" class="alert-link">
                            View Coaches Directory
                        </a>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header bg-primary text-white text-center">
                            <h4><i class="fas fa-sign-in-alt"></i> System Login</h4>
                        </div>
                        <div class="card-body">
                            <form asp-action="Login">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group mb-3">
                                    <label asp-for="UserName" class="control-label">
                                        <i class="fas fa-user"></i> Username
                                    </label>
                                    <input asp-for="UserName" class="form-control" placeholder="Enter username" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="Password" class="control-label">
                                        <i class="fas fa-lock"></i> Password
                                    </label>
                                    <input type="password" asp-for="Password" class="form-control" placeholder="Enter password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Login" class="btn btn-primary w-100" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                </div>
            </div>
        </main>
    </div>

    <footer class="border-top footer text-center">
        <div class="container">
            &copy; 2025 - SmokeQuit Chat System - LocDPX
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>