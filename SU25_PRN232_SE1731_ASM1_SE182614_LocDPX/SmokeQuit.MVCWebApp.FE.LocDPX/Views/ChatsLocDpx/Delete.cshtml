@model SmokeQuit.Repositories.LocDPX.Models.ChatsLocDpx

@{
    ViewData["Title"] = "Delete Chat Message";
}

<h1>Delete Chat Message</h1>

<h3 class="text-danger">Are you sure you want to delete this message?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Message</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Message)</dd>

        <dt class="col-sm-3">Message Type</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.MessageType)</dd>

        <dt class="col-sm-3">Sent By</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.SentBy)</dd>

        <dt class="col-sm-3">User</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.User.UserName)</dd>

        <dt class="col-sm-3">Coach</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Coach.FullName)</dd>

        <dt class="col-sm-3">Read Status</dt>
        <dd class="col-sm-9">
            @if (Model.IsRead)
            {
                <span class="badge bg-success">Read</span>
            }
            else
            {
                <span class="badge bg-warning">Unread</span>
            }
        </dd>

        <dt class="col-sm-3">Created At</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedAt)</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ChatsLocDpxid" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>