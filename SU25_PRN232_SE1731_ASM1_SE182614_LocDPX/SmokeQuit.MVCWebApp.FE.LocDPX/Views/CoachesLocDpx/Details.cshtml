@model SmokeQuit.Repositories.LocDPX.Models.CoachesLocDpx

@{
    ViewData["Title"] = "Coach Details";
}

<h1>Coach Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Full Name</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.FullName)</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">
            <a href="mailto:@Model.Email">@Html.DisplayFor(model => model.Email)</a>
        </dd>

        <dt class="col-sm-3">Phone Number</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.PhoneNumber)</dd>

        <dt class="col-sm-3">Bio</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Bio)</dd>

        <dt class="col-sm-3">Created At</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedAt)</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.CoachesLocDpxid" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>